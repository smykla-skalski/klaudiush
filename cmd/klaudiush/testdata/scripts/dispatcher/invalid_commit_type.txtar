# Test: Invalid commit type is blocked
# This tests that non-conventional commit messages are caught

exec git init --initial-branch=main
exec git config user.email "test@test.com"
exec git config user.name "Test User"

cp file.go staged.go
exec git add staged.go

stdin input.json
exec klaudiush --hook-type PreToolUse
stdout '"permissionDecision":"deny"'

-- file.go --
package main

func main() {}

-- input.json --
{
  "tool_name": "Bash",
  "tool_input": {
    "command": "git commit -sS -m 'invalid: not a valid type'"
  }
}
