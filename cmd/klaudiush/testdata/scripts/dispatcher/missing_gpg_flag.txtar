# Test: Commit without -S (GPG sign) flag is blocked
# This tests that missing GPG signature is caught

exec git init --initial-branch=main
exec git config user.email "test@test.com"
exec git config user.name "Test User"

cp file.go staged.go
exec git add staged.go

stdin input.json
exec klaudiush --hook-type PreToolUse
stdout '"permissionDecision":"deny"'
stdout 'missing required flag.*-S'

-- file.go --
package main

func main() {}

-- input.json --
{
  "tool_name": "Bash",
  "tool_input": {
    "command": "git commit -s -m 'feat(api): add user endpoint'"
  }
}
